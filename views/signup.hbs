{{> title}}

<div class="flex col auth-container">
  <h2>Sign Up</h2>

  <p class="text-body warn">{{message}}</p>

  <form action="/signup" method="POST" class="flex col">
    <label for="username" class="text-body black">Username</label>
    <input type="text" name="username">

    <label for="password" class="text-body black">Password</label>
    <input type="password" name="password">

    <button type="submit">Sign Up</button>
  </form>
</div>